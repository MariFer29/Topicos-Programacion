@model List<PersonVehicle.UI.Models.Vehicles>

@{
    ViewData["Title"] = "Todos los Vehículos";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4><i class="bi bi-car-front"></i> Gestión de Vehículos</h4>
                    <div>
                        <button class="btn btn-success me-2" data-bs-toggle="collapse" data-bs-target="#addVehicleForm">
                            <i class="bi bi-plus-circle"></i> Agregar Vehículo
                        </button>
                        <a asp-action="Index" class="btn btn-light">
                            <i class="bi bi-house"></i> Volver al Inicio
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill"></i> <strong>¡Éxito!</strong> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> <strong>Error:</strong> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Resultado de búsqueda de vehículo -->
                    @if (TempData["VehicleResult"] != null)
                    {
                        var vehicle = System.Text.Json.JsonSerializer.Deserialize<PersonVehicle.UI.Models.Vehicles>(TempData["VehicleResult"].ToString());
                        <div class="card border-info mb-4 shadow-sm">
                            <div class="card-header bg-info text-white">
                                <h5 class="mb-0">
                                    <i class="bi bi-car-front-fill"></i> Información del Vehículo
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="text-info"><i class="bi bi-info-circle"></i> Datos del Vehículo</h6>
                                        <table class="table table-sm">
                                            <tbody>
                                                <tr>
                                                    <th width="40%">Placa:</th>
                                                    <td><span class="badge bg-primary fs-6">@vehicle.Plate</span></td>
                                                </tr>
                                                <tr>
                                                    <th>Marca:</th>
                                                    <td>@vehicle.Make</td>
                                                </tr>
                                                <tr>
                                                    <th>Modelo:</th>
                                                    <td>@vehicle.Model</td>
                                                </tr>
                                                <tr>
                                                    <th>Año:</th>
                                                    <td><span class="badge bg-secondary">@vehicle.Year</span></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-md-6">
                                        <h6 class="text-success"><i class="bi bi-person-fill"></i> Datos del Propietario</h6>
                                        @if (vehicle.Owner != null && vehicle.Owner.Person != null)
                                        {
                                            <table class="table table-sm">
                                                <tbody>
                                                    <tr>
                                                        <th width="40%">Identificación:</th>
                                                        <td><span class="badge bg-success">@vehicle.Owner.Person.Identification</span></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Nombre:</th>
                                                        <td><strong>@vehicle.Owner.Person.FirstName @vehicle.Owner.Person.LastName</strong></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Email:</th>
                                                        <td><a href="mailto:@vehicle.Owner.Person.Email">@vehicle.Owner.Person.Email</a></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Teléfono:</th>
                                                        <td>@vehicle.Owner.Person.Phone</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Salario:</th>
                                                        <td>@vehicle.Owner.Person.Salario.ToString("C")</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        }
                                        else if (vehicle.PersonIdentification.HasValue && vehicle.PersonIdentification.Value > 0)
                                        {
                                            <div class="alert alert-warning mb-0">
                                                <p class="mb-0"><strong>ID Propietario:</strong> @vehicle.PersonIdentification</p>
                                                <small class="text-muted">Información completa no disponible</small>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="alert alert-secondary mb-0">
                                                <i class="bi bi-info-circle"></i> No hay información del propietario disponible
                                            </div>
                                        }
                                    </div>
                                </div>
                                <hr>
                                <div class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditVehicle" asp-route-plate="@vehicle.Plate" class="btn btn-warning">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        <button type="button" 
                                                class="btn btn-danger" 
                                                onclick="confirmarEliminacionVehiculo('@vehicle.Plate', '@vehicle.Make @vehicle.Model')">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Buscador de vehículo por placa -->
                    <div class="card mb-4 border-primary shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-primary">
                                <i class="bi bi-search"></i> Buscar Vehículo por Placa
                            </h5>
                            <p class="text-muted">Ingrese la placa del vehículo para ver su información completa y la de su propietario</p>
                            <form asp-action="SearchVehicleByPlate" method="post" class="row g-3">
                                <div class="col-md-9">
                                    <div class="input-group input-group-lg">
                                        <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                                        <input type="text" name="plate" class="form-control" 
                                               placeholder="Ingrese la placa del vehículo (ej: ABC-123)" 
                                               required 
                                               pattern="[A-Za-z0-9\-]+"
                                               title="Ingrese una placa válida">
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="bi bi-search"></i> Buscar
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Formulario para agregar vehículo -->
                    <div class="collapse mb-4" id="addVehicleForm">
                        <div class="card border-success shadow-sm">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Agregar Nuevo Vehículo</h5>
                            </div>
                            <div class="card-body">
                                <form asp-action="CreateVehicle" method="post">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="plate" class="form-label">Placa *</label>
                                                <input type="text" class="form-control" id="plate" name="plate" placeholder="Ej: ABC-123" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="ownerIdentification" class="form-label">Identificación del Propietario *</label>
                                                <input type="number" class="form-control" id="ownerIdentification" name="ownerIdentification" placeholder="Identificación de la persona" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label for="make" class="form-label">Marca *</label>
                                                <input type="text" class="form-control" id="make" name="make" placeholder="Ej: Toyota" required>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label for="model" class="form-label">Modelo *</label>
                                                <input type="text" class="form-control" id="model" name="model" placeholder="Ej: Corolla" required>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label for="year" class="form-label">Año *</label>
                                                <input type="number" class="form-control" id="year" name="year" placeholder="2024" min="1900" max="2030" value="2024" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <button type="button" class="btn btn-secondary me-md-2" data-bs-toggle="collapse" data-bs-target="#addVehicleForm">
                                            <i class="bi bi-x-circle"></i> Cancelar
                                        </button>
                                        <button type="submit" class="btn btn-success">
                                            <i class="bi bi-check-circle"></i> Crear Vehículo
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Tabla de vehículos -->
                    @if (Model != null && Model.Any())
                    {
                        <div class="card shadow-sm">
                            <div class="card-header bg-secondary text-white">
                                <h5 class="mb-0"><i class="bi bi-list-ul"></i> Lista de Todos los Vehículos</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover align-middle">
                                        <thead class="table-dark">
                                            <tr>
                                                <th><i class="bi bi-card-text"></i> Placa</th>
                                                <th><i class="bi bi-tag"></i> Marca</th>
                                                <th><i class="bi bi-gear"></i> Modelo</th>
                                                <th><i class="bi bi-calendar"></i> Año</th>
                                                <th><i class="bi bi-person"></i> ID Propietario</th>
                                                <th class="text-center"><i class="bi bi-tools"></i> Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var vehicle in Model)
                                            {
                                                <tr>
                                                    <td><strong class="text-primary">@vehicle.Plate</strong></td>
                                                    <td>@vehicle.Make</td>
                                                    <td>@vehicle.Model</td>
                                                    <td><span class="badge bg-secondary">@vehicle.Year</span></td>
                                                    <td>
                                                        @if (vehicle.PersonIdentification.HasValue && vehicle.PersonIdentification.Value > 0)
                                                        {
                                                            <span class="badge bg-info">@vehicle.PersonIdentification</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">Sin propietario</span>
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="btn-group" role="group">
                                                            <a asp-action="EditVehicle" asp-route-plate="@vehicle.Plate" 
                                                               class="btn btn-sm btn-warning" title="Editar vehículo">
                                                                <i class="bi bi-pencil"></i> Editar
                                                            </a>
                                                            <button type="button" 
                                                                    class="btn btn-sm btn-danger" 
                                                                    onclick="confirmarEliminacionVehiculo('@vehicle.Plate', '@vehicle.Make @vehicle.Model')"
                                                                    title="Eliminar vehículo">
                                                                <i class="bi bi-trash"></i> Eliminar
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="mt-3 d-flex justify-content-between align-items-center">
                                    <p class="text-muted mb-0">
                                        <i class="bi bi-info-circle"></i> Total de vehículos: <strong>@Model.Count</strong>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning shadow-sm">
                            <h5><i class="bi bi-exclamation-triangle"></i> No hay vehículos registrados</h5>
                            <p class="mb-0">No se encontraron vehículos en el sistema. Use el botón "Agregar Vehículo" para crear uno nuevo.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Formulario oculto para eliminar -->
<form id="deleteVehicleForm" asp-action="DeleteVehicle" method="post" style="display: none;">
    <input type="hidden" id="deletePlate" name="plate" />
</form>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Reset form when collapsed
        var addVehicleForm = document.getElementById('addVehicleForm');
        if (addVehicleForm) {
            addVehicleForm.addEventListener('hidden.bs.collapse', function () {
                var form = document.querySelector('#addVehicleForm form');
                if (form) form.reset();
            });
        }

        // Función para confirmar eliminación de vehículo (reutilizada)
        function confirmarEliminacionVehiculo(placa, descripcion) {
            if (confirm('¿Está seguro que desea eliminar el vehículo ' + descripcion + ' (Placa: ' + placa + ')?\n\nEsta acción no se puede deshacer.')) {
                document.getElementById('deletePlate').value = placa;
                document.getElementById('deleteVehicleForm').submit();
            }
        }
    </script>
}
