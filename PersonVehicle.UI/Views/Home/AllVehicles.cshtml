@model List<PersonVehicle.UI.Models.Vehicles>

@{
    ViewData["Title"] = "Todos los Vehículos";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4>Todos los Vehículos</h4>
                    <div>
                        <button class="btn btn-success me-2" data-bs-toggle="collapse" data-bs-target="#addVehicleForm">
                            Agregar Vehículo
                        </button>
                        <a asp-action="Index" class="btn btn-light">Volver al Inicio</a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>Éxito:</strong> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error:</strong> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Formulario para agregar vehículo -->
                    <div class="collapse mb-4" id="addVehicleForm">
                        <div class="card">
                            <div class="card-header bg-success text-white">
                                <h5>Agregar Nuevo Vehículo</h5>
                            </div>
                            <div class="card-body">
                                <form asp-action="CreateVehicle" method="post">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="plate" class="form-label">Placa *</label>
                                                <input type="text" class="form-control" id="plate" name="plate" placeholder="Ej: ABC-123" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label for="ownerIdentification" class="form-label">Identificación del Propietario</label>
                                                <input type="text" class="form-control" id="ownerIdentification" name="ownerIdentification" placeholder="Identificación de la persona" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label for="make" class="form-label">Marca</label>
                                                <input type="text" class="form-control" id="make" name="make" placeholder="Ej: Toyota">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label for="model" class="form-label">Modelo</label>
                                                <input type="text" class="form-control" id="model" name="model" placeholder="Ej: Corolla">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="mb-3">
                                                <label for="year" class="form-label">Año</label>
                                                <input type="number" class="form-control" id="year" name="year" placeholder="2024" min="1900" max="2030" value="2024">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                        <button type="button" class="btn btn-secondary me-md-2" data-bs-toggle="collapse" data-bs-target="#addVehicleForm">
                                            Cancelar
                                        </button>
                                        <button type="submit" class="btn btn-success">Crear Vehículo</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Placa</th>
                                        <th>Marca</th>
                                        <th>Modelo</th>
                                        <th>Año</th>
                                        <th>Propietario</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var vehicle in Model)
                                    {
                                        <tr>
                                            <td><strong>@vehicle.Plate</strong></td>
                                            <td>@vehicle.Make</td>
                                            <td>@vehicle.Model</td>
                                            <td>@vehicle.Year</td>
                                            <td>@vehicle.PersonIdentification</td>
                                            <td>
                                                <a asp-action="EditVehicle" asp-route-plate="@vehicle.Plate" 
                                                   class="btn btn-sm btn-warning">Editar</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <p class="text-muted">Total de vehículos: @Model.Count</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h5>No hay vehículos registrados</h5>
                            <p>No se encontraron vehículos en el sistema.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Reset form when collapsed
        document.getElementById('addVehicleForm').addEventListener('hidden.bs.collapse', function () {
            document.querySelector('#addVehicleForm form').reset();
        });
    </script>
}
