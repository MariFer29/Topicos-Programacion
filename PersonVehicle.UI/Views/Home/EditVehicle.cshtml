@model PersonVehicle.UI.Models.Vehicles

@{
    ViewData["Title"] = "Editar Vehículo";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4>Editar Vehículo - @Model.Plate</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>Propietario:</strong> @Model.OwnerName
                    </div>

                    <form asp-action="UpdateVehicle" asp-route-plate="@Model.Plate" method="post">
                        <div class="mb-3">
                            <label for="make" class="form-label">Marca</label>
                            <input type="text" class="form-control" id="make" name="make" value="@Model.Make">
                        </div>

                        <div class="mb-3">
                            <label for="model" class="form-label">Modelo</label>
                            <input type="text" class="form-control" id="model" name="model" value="@Model.Model">
                        </div>

                        <div class="mb-3">
                            <label for="year" class="form-label">Año</label>
                            <input type="number" class="form-control" id="year" name="year" value="@Model.Year" min="1900" max="2030">
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="AllVehicles" class="btn btn-secondary me-md-2">Volver a Lista</a>
                            <button type="submit" class="btn btn-warning">Actualizar Vehículo</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>